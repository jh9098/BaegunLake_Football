rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // users 컬렉션: 로그인한 사용자만 자신의 문서를 읽고 쓸 수 있다.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // children 컬렉션: 로그인한 사용자만 자신의 자녀 문서를 읽을 수 있다. (관리자는 모든 문서 접근 가능)
    match /children/{childId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.children.hasAny([childId]);
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'coach'];
    }

    // sessions, progressReports 컬렉션: 로그인한 사용자라면 누구나 읽을 수 있다. (쓰기는 관리자/코치만)
    match /sessions/{sessionId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'coach'];
    }
    
    match /progressReports/{reportId} {
       allow read: if request.auth != null;
       allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'coach'];
    }

    // communityPosts 컬렉션: 로그인한 사용자만 읽고 쓸 수 있으며, 본인 글만 수정/삭제 가능
    match /communityPosts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.authorUid == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.authorUid == request.auth.uid;
    }
  }
}